RewriteEngine On
RewriteBase /

# Điều hướng URL sạch (rewrite) cho các trang
RewriteRule ^home$ /index.php?page=home [L]
RewriteRule ^products$ /index.php?page=products [L]
RewriteRule ^products&category_id=([0-9]+)$ /index.php?page=products&category_id=$1 [L]

RewriteRule ^product-detail$ /index.php?page=product-detail [L]
RewriteRule ^product-detail&id=([0-9]+)$ /index.php?page=product-detail&id=$1 [L]

RewriteRule ^cart$ /index.php?page=cart [L]
RewriteRule ^checkout$ /index.php?page=checkout [L]

RewriteRule ^order-success$ /index.php?page=order-success [L]
RewriteRule ^order-success&order_id=([0-9]+)$ /index.php?page=order-success&order_id=$1 [L]

RewriteRule ^login$ /index.php?page=login [L]
RewriteRule ^account$ /index.php?page=account [L]
RewriteRule ^register$ /index.php?page=register [L]

RewriteRule ^contact$ /index.php?page=contact [L]

RewriteRule ^admin/list$ /index.php?page=list [L]
RewriteRule ^admin/add$ /index.php?page=add [L]

RewriteRule ^admin/edit$ /index.php?page=edit [L]
RewriteRule ^admin/edit&id=([0-9]+)$ /index.php?page=edit&id=$1 [L]

RewriteRule ^admin/delete$ /index.php?page=delete [L]
RewriteRule ^admin/delete&id=([0-9]+)$ /index.php?page=delete&id=$1 [L]

RewriteRule ^admin/export$ /index.php?page=export [L]
RewriteRule ^admin/statistics$ /index.php?page=statistics [L]

# Trang lỗi 404 nếu không tìm thấy trang
RewriteRule ^404$ /index.php?page=404 [L]